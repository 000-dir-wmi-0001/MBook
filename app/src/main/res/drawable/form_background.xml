<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/formBackgroundColor"/> <!-- White background -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="@color/borderColor"/> <!-- Black border -->
        </shape>
    </item>
</selector>



