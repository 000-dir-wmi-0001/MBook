<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPressed"/> <!-- Light gray for pressed state -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="@color/colorBorder"/> <!-- Black border -->
        </shape>
    </item>
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorFocused"/> <!-- Medium gray for focused state -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="@color/colorBorder"/> <!-- Black border -->
        </shape>
    </item>
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonColor"/> <!-- Custom button color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="@color/colorBorder"/> <!-- Black border -->
        </shape>
    </item>
</selector>



