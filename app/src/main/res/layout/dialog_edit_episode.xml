<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Episode"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/episode_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new title" />

    <Button
        android:id="@+id/select_audio_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select New Audio File"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/select_transcript_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select New Transcript File"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/update_episode_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Episode"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginTop="8dp" />
</LinearLayout>
